<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= field_set_tag do %>
  <legend>Sign up</legend>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
    <%= f.text_field :name %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :username %>
    <div class="input">
    <%= f.text_field :username %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
    <%= f.email_field :email %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
    <%= f.password_field :password %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password_confirmation %>
    <div class="input">
    <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "btn success" %>
  </div>
  <% end %>  
<% end %>

<%= render :partial => "devise/shared/links" %>
