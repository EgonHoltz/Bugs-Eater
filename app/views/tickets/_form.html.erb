<%= form_for(@ticket) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    
    <%= render :partial => 'status', :locals => { :f => f} if controller.action_name == "edit" %>

    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name, :class => "xlarge", :size => "100" %>    
      </div>
    </div>
    
    <div class="clearfix">
      <%= f.label :description %>
      <div class="input">
        <%= f.text_area :description, :class => "xxlarge", :size => "100x10" %>    
      </div>
    </div>

    <div class="actions">
      <%= f.submit :class => "btn primary" %>
      <%= link_to 'Show', @ticket, :class => "btn info" if controller.action_name == "edit" %>
      <%= link_to 'Back', tickets_path, :class => "btn" %>
    </div>
<% end %>